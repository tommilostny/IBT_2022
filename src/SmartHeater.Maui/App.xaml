<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SmartHeater.Maui"
             x:Class="SmartHeater.Maui.App"
             xmlns:converters="clr-namespace:SmartHeater.Maui.Converters">
    <Application.Resources>
        <ResourceDictionary Source="Resources/Styles.xaml" />

        <ResourceDictionary>
            <converters:SettingsConnectColorConverter x:Key="ConnectColorConverter" />
            <converters:SettingsConnectTextConverter x:Key="ConnectTextConverter" />
            <converters:MeasurementStatusConverter x:Key="MeasurementStatusConverter" />
            <converters:UtcToLocalConverter x:Key="UtcToLocalConverter" />
            <converters:ShowNotNullConverter x:Key="ShowNotNullConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
